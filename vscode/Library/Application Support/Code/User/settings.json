{
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true
  },
  "conventionalCommits.emojiFormat": "emoji",
  "conventionalCommits.promptFooter": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 13,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": true,
  "explorer.excludeGitIgnore": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.exclude": {
    "**/*.egg-info": true,
    "**/*.pyc": true,
    "**/*_cache": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.idea": true,
    "**/.svn": true,
    "**/.venv": true,
    "**/.vscode": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true
  },
  "git.autofetch": true,
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Use snake_case for function names."
    },
    {
      "text": "Use snake_case for variable names."
    },
    {
      "text": "Use UPPERCASE for constant variables"
    },
    {
      "text": "Always add type-hints for functions"
    },
    {
      "text": "Add type-hints for variables only if the variable is a complicated type (ie. not int, str, bool, etc.)"
    },
    {
      "text": "Use docstrings for functions and classes"
    }
  ],
  "github.copilot.nextEditSuggestions.enabled": true,
  "path-intellisense.showHiddenFiles": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.languageServerMode": "full",
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "ruff.configuration": "./pyproject.toml",
  "ruff.lineLength": 120,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.hideOnStartup": "always",
  "window.zoomLevel": 0.5,
  "workbench.colorTheme": "Nord",
  "workbench.list.openMode": "doubleClick",
  "workbench.startupEditor": "none",
  "workbench.tree.expandMode": "doubleClick",
  "workbench.tree.indent": 10,
  "workbench.iconTheme": "material-icon-theme"
}